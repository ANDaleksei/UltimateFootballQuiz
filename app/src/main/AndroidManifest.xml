        <activity
            android:name="com.warped.andaleksei.ultimatefootballquiz.hints"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.warped.andaleksei.ultimatefootballquiz.settings"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.warped.andaleksei.ultimatefootballquiz.coins"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.warped.andaleksei.ultimatefootballquiz.popUpWindow"
            android:screenOrientation="portrait"
