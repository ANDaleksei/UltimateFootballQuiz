        </activity>
        <activity
            android:name="com.warped.andaleksei.ultimatefootballquiz.playModes"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.warped.andaleksei.ultimatefootballquiz.singlePlayMode"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.warped.andaleksei.ultimatefootballquiz.playWithFriendMode"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.warped.andaleksei.ultimatefootballquiz.singlePlayGame"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.warped.andaleksei.ultimatefootballquiz.singlePlayMenu"
