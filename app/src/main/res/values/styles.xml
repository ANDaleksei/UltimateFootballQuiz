<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28dp</item>
        <item name="android:background">@drawable/grid_frame</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="optionStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">#3F51B5</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="duelPhotoStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>

        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="progressTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="bulb">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/bulb</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="coins">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/coins</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="coinsNumbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:text">150</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#FDD835</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>


</resources>
