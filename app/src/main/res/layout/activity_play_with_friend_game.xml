<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/field"
    android:id="@+id/content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/opponentOption_1"
            style="@style/optionStyle"
            android:rotation="180"/>

        <TextView
            android:id="@+id/opponentOption_2"
            style="@style/optionStyle"
            android:rotation="180"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/opponentOption_3"
            style="@style/optionStyle"
            android:rotation="180"/>

        <TextView
            android:id="@+id/opponentOption_4"
            style="@style/optionStyle"
            android:rotation="180"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/opponentPhoto"
            android:rotation="180"
            style="@style/duelPhotoStyle"/>

        <ImageView
            android:id="@+id/playerPhoto"
            style="@style/duelPhotoStyle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/playerOption_1"
            style="@style/optionStyle"/>

        <TextView
            android:id="@+id/playerOption_2"
            style="@style/optionStyle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/playerOption_3"
            style="@style/optionStyle"/>

        <TextView
            android:id="@+id/playerOption_4"
            style="@style/optionStyle"/>

    </LinearLayout>

</LinearLayout>