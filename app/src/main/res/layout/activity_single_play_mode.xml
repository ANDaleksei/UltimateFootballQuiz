<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_grad"
    tools:context="com.example.andaleksei.ultimatefootballquiz.singlePlayMode" >

    <LinearLayout
        android:id="@+id/coinsContainer"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">

        <ImageView
            style="@style/coins"/>

        <TextView
            android:id="@+id/coins"
            style="@style/coinsNumbers" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/settings"
            style="@style/settings"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/coinsContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/players"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#FDD835"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="2dp"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:src="@drawable/pogba"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/progressBarFootballers"
                        style="@style/progressBar"
                        />

                    <TextView
                        android:id="@+id/textViewFootballers"
                        style="@style/progressTextStyle"
                        android:text="@string/players"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/clubs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:src="@drawable/anderlecht"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/progressBarClubs"
                        style="@style/progressBar"/>

                    <TextView
                        android:id="@+id/textViewClubs"
                        style="@style/progressTextStyle"
                        android:text="@string/clubs"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/transfer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#FDD835"
                android:padding="2dp"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:src="@drawable/gotze"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/progressBarTransfers"
                        style="@style/progressBar"/>

                    <TextView
                        android:id="@+id/textViewTransfers"
                        style="@style/progressTextStyle"
                        android:text="@string/transfers"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/legend"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="#FDD835"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="2dp"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/legendPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:src="@drawable/henry"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/progressBarLegends"
                        style="@style/progressBar"/>

                    <TextView
                        android:id="@+id/textViewLegends"
                        style="@style/progressTextStyle"
                        android:text="@string/legends"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>